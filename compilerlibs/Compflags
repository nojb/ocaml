case $1 in
  compilerlibs/ocamlcommon.cm*)
      echo ' -no-alias-deps -w -49';;
  compilerlibs/ocamlbytecomp.cm*)
      echo ' -no-alias-deps -w -49';;
  compilerlibs/ocamloptcomp.cm*)
      echo ' -no-alias-deps -w -49';;
  compilerlibs/ocamlcommon__*.cm*)
      echo ' -I compilerlibs' \
           ' -open Ocamlcommon';;
  compilerlibs/ocamlbytecomp__*.cm*)
      echo ' -I compilerlibs' \
           ' -open Ocamlcommon' \
           ' -open Ocamlbytecomp';;
  compilerlibs/ocamloptcomp__*.cm*)
      echo ' -I compilerlibs' \
           ' -open Ocamlcommon' \
           ' -open Ocamloptcomp';;
  compilerlibs/unprefixed/*.cm*)
      echo ' -I compilerlibs';;
  driver/*main.cm*)
      echo ' -I driver' \
           ' -I compilerlibs' \
           ' -open Ocamlcommon' \
           ' -open Ocamlbytecomp' \
           ' -open Ocamloptcomp';;
  *)
      echo ' ';;
esac
